{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://woodshop.dev/schemas/param_update.input.json",
  "title": "ParamUpdateInput",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "project_id": {
      "allOf": [
        { "$ref": "./common.schema.json#/$defs/projectId" }
      ]
    },
    "revision_id": {
      "type": "string",
      "description": "Revision identifier the caller believes is current"
    },
    "seed": {
      "allOf": [
        { "$ref": "./common.schema.json#/$defs/seedInput" }
      ]
    },
    "current": {
      "allOf": [
        { "$ref": "./common.schema.json#/$defs/projectParameters" }
      ]
    },
    "changes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "parameter": {
            "type": "string",
            "enum": [
              "width_mm",
              "height_mm",
              "depth_mm",
              "shelf_count",
              "door_style",
              "back_panel"
            ]
          },
          "value": {
            "type": ["number", "string", "boolean"]
          },
          "reason": {
            "type": "string",
            "minLength": 1
          }
        },
        "required": ["parameter", "value"]
      }
    },
    "constraints": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "min": { "type": "number" },
          "max": { "type": "number" },
          "step": { "type": "number", "minimum": 0 },
          "enum": {
            "type": "array",
            "minItems": 1,
            "items": { "type": ["number", "string", "boolean"] }
          }
        }
      }
    },
    "notes": {
      "type": "string"
    }
  },
  "required": ["project_id", "current", "changes"]
}
