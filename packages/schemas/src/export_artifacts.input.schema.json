{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://woodshop.dev/schemas/export_artifacts.input.json",
  "title": "ExportArtifactsInput",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "project_id": {
      "allOf": [
        { "$ref": "./common.schema.json#/$defs/projectId" }
      ],
      "description": "Identifier returned by create_project"
    },
    "format": {
      "type": "string",
      "enum": ["pdf", "dxf", "svg"],
      "description": "Artifact format to export"
    },
    "revision_id": {
      "allOf": [
        { "$ref": "./common.schema.json#/$defs/revisionId" }
      ],
      "description": "Revision identifier for provenance"
    },
    "destination": {
      "type": "string",
      "description": "Optional output directory relative to repository root",
      "minLength": 1
    },
    "seed": {
      "allOf": [
        { "$ref": "./common.schema.json#/$defs/seedInput" }
      ],
      "description": "Deterministic seed for export"
    },
    "idempotency_key": {
      "$ref": "./common.schema.json#/$defs/idempotencyKey"
    }
  },
  "required": ["project_id", "format"]
}
