{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://woodshop.dev/schemas/wood_movement_check.input.json",
  "title": "WoodMovementCheckInput",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "project_id": {
      "allOf": [
        { "$ref": "./common.schema.json#/$defs/projectId" }
      ],
      "description": "Identifier returned by create_project"
    },
    "seed": {
      "allOf": [
        { "$ref": "./common.schema.json#/$defs/seedInput" }
      ],
      "description": "Deterministic seed"
    },
    "ambient": { "$ref": "./common.schema.json#/$defs/ambient" },
    "parts": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "part_id": { "type": "string" },
          "species": { "type": "string" },
          "grain_axis": {
            "type": "string",
            "enum": ["length", "width", "thickness"]
          },
          "nominal_mm": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "length": { "type": "number", "minimum": 0 },
              "width": { "type": "number", "minimum": 0 },
              "thickness": { "type": "number", "minimum": 0 }
            },
            "required": ["length", "width", "thickness"]
          }
        },
        "required": ["part_id", "species", "grain_axis", "nominal_mm"]
      }
    }
  },
  "required": ["project_id", "ambient", "parts"]
}
