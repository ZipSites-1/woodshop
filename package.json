{
  "name": "woodshop",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "devDependencies": {
    "turbo": "^2.0.0",
    "typescript": "^5.4.0"
  },
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "codegen:schemas": "node tools/codegen/generate-schema-types.mjs && pnpm --filter @woodshop/schemas run build && pnpm --filter @woodshop/types run build",
    "test:mcp": "pnpm --filter @woodshop/mcp-server run test",
    "mcp:e2e:demo": "node tools/e2e/run-mcp-demo.mjs",
    "e2e:artifacts": "node tools/e2e/run-mcp-artifacts.mjs artifacts/current",
    "e2e:artifacts:reference": "node tools/e2e/run-mcp-artifacts.mjs artifacts/reference",
    "cam:demo": "node tools/cam/run-demo.mjs",
    "openrpc:generate": "node tools/openrpc/generate-openrpc.mjs"
  }
}
