{
  "version": 5,
  "configurePresets": [
    {
      "name": "macos-arm64-release",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/macos-release",
      "cacheVariables": {
        "CMAKE_PREFIX_PATH": "/opt/homebrew/opt/qt",
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CMAKE_OSX_ARCHITECTURES": "arm64",
        "CMAKE_INTERPROCEDURAL_OPTIMIZATION": "ON"
      }
    },
    {
      "name": "macos-arm64-debug",
      "inherits": "macos-arm64-release",
      "binaryDir": "${sourceDir}/build/macos-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_INTERPROCEDURAL_OPTIMIZATION": "OFF"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "build-release",
      "configurePreset": "macos-arm64-release"
    },
    {
      "name": "build-debug",
      "configurePreset": "macos-arm64-debug"
    }
  ],
  "testPresets": [
    {
      "name": "test-release",
      "configurePreset": "macos-arm64-release",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "test-debug",
      "configurePreset": "macos-arm64-debug",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}
